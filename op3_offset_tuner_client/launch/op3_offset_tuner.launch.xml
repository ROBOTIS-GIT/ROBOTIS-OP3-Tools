<?xml version="1.0" ?>
<launch>
  <node pkg="op3_offset_tuner_server" exec="offset_tuner_server_node" name="offset_tuner_server" output="screen">
    <param name="offset_path" value="$(find-pkg-share op3_manager)/config/offset.yaml"/>
    <param name="robot_file_path" value="$(find-pkg-share op3_manager)/config/OP3.robot"/>
    <param name="init_file_path" value="$(find-pkg-share op3_manager)/config/dxl_init.yaml"/>
  </node>
  <node pkg="op3_offset_tuner_client" exec="op3_offset_tuner_client" name="offset_tuner_client" output="screen"/>
</launch>